(data_only_dirs shmffi cargo)

(library
 (name shmffi)
 (modules)
 (c_library_flags -lpthread)
 (wrapped false)
 (foreign_archives shmffi))

(rule
 (targets libshmffi.a)
 (deps
  (source_tree %{workspace_root}/src))
 (locks /cargo)
 (action
  (run %{workspace_root}/scripts/invoke_cargo.sh shmffi shmffi)))
